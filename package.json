{
  "name": "specjest",
  "version": "1.3.0",
  "description": "CLI utility to flip from .feature to jest tests and vice-versa",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./bdd": "./dist/bdd.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "jest --verbose",
    "test:ci": "jest --ci --coverage --verbose",
    "gen:feat": "npm run build && jest --json 2>/dev/null | node dist/cli.app.js feat",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ioprodz/specjest.git"
  },
  "keywords": [
    "jest",
    "spec",
    "bdd",
    "acceptance",
    "test",
    "gherkin",
    "tdd",
    "convert",
    "generate",
    "documentation"
  ],
  "author": "Osmane Kalache",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ioprodz/specjest/issues"
  },
  "homepage": "https://github.com/ioprodz/specjest#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.7",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "semantic-release": "^25.0.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)+(spec|test).ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ]
  },
  "files": [
    "dist"
  ],
  "bin": {
    "specjest": "./dist/cli.app.js"
  }
}
